<%= form_for(@user1,:html => {:id => "signup"},:url => {:action => "create1"}) do |f| %>
<%= render 'shared/error_messages' %>
<table align="center" width="100%">
  <tr>
    <td align="center">
      <%= f.text_field :CompanyName,placeholder: "Company Name" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.text_field :AlternateName, placeholder: "Alternate Name (optional)" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.text_field :email, placeholder: "Email" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.password_field :password, placeholder: "Password" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.password_field :password_confirmation,placeholder: "Re-Enter Password" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.select :Selector, options_for_select([
          "Name to Display",
           "Company Name",
           "Alternate Name" ]),:style => "width:154px" %>
    </td>
  </tr>
  <tr>
    <td align="center">
      <%= f.select(:From, options_for_select((1950..Time.now.year).to_a.reverse), {:include_blank => "Select year"},{:class => "input-medium"}) %>
