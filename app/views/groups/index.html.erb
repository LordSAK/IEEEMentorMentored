<% provide(:title, "My Groups") %>


<h1 class="title">My Gorups</h1>
<table align="center" width="100%" >
	<tr>
		<td style="font-size: x-large; color: #212121; text-align:center;" height="35px;">
			<div  style="width:75px;background-color:#33b5e5;
				border-radius:15px;
  				display:inline-block;
				color: white;
				font-family: Raleway;
				font-size:12px;
				font-weight:bold;
				padding:14px 30px;
				text-decoration: none;
  				padding-botton:0px;
	   			margin-top: 0px;
    			margin-bottom: 15px;
    			text-align:center;">
				<%= link_to "Create Group", '/groups/new', {method: :get, :class => "buttonback"} %>
			</div>
		</td>
	</tr>
</table>
<table class="table table-striped table-hover" width="744">
<tbody>
	<% @groups.each do |gu| %>
		<tr>
			<td>
				<a style="color:blue;" href = '/groups/<%= gu.id %>'>
            		<%= gu.name %>
	        	</a>
			</td>
			<td>
				<%= gu.description %>
			</td>
		</tr>
	<% end %>
</tbody>
</table>
<table align="center" width="100%" >
	<tr>
        <td style="font-size: x-large; color: #212121; text-align:center;" height="35px;">
            <div style="width:30px;background-color:#33b5e5;
  				border-radius:15px;
	  			display:inline-block;
  				color: white;
  				font-family: Raleway;
  				font-size:12px;
  				font-weight:bold;
  				padding:14px 30px;
  				text-decoration: none;
    			padding-botton:0px;
	    		margin-top: 0px;
    			margin-bottom: 15px;
    			text-align:center;">
                <%= link_to "Back", "/default", { :class => "buttonBack"} %>
            </div>
        </td>
    </tr>
</table>