<% if current_user.Account=="company" %>
	<h1 class="title">Posts created</h1>
<% elsif current_user.Account=="normal" %>
	<h1 class="title">Internships applied</h1>
<% end %>

<table class="table table-striped table-hover" width="744">
<tbody>
	<% @internship.each do |intern| %>
		<tr>
			<td>
				<a style="color:blue;" href = '/internships/<%= intern.id %>'>
            		<%= intern.Title %>
	        	</a>
			</td>
			<td>
				<%= intern.Description %>
			</td>
		</tr>
	<% end %>
</tbody>
</table>
<table align="center" width="100%">
	<tr>
        <td style="font-size: x-large; color: #212121; text-align:center;" height="35px;">
            <div style="width:30px;background-color:#33b5e5;
  				border-radius:15px;
	  			display:inline-block;
  				color: white;
  				font-family: Raleway;
  				font-size:12px;
  				font-weight:bold;
  				padding:14px 30px;
  				text-decoration: none;
    			padding-botton:0px;
	    		margin-top: 0px;
    			margin-bottom: 15px;
    			text-align:center;">
                <%= link_to "Back", "/default", { :class => "buttonBack"} %>
            </div>
        </td>
    </tr>
</table>